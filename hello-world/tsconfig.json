{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
		"outDir": "dist",
    "sourceMap": true,
    "declaration": false,
    "module": "commonjs",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom",
      "es5",
      "es2015.promise",
      "es2015",
      "es6"
    ]
  },
  "exclude": [
      "node_modules"
  ]
}
